<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_purchase_request_type_tree" model="ir.ui.view">
        <field name="model">purchase.request.type</field>
        <field
            name="inherit_id"
            ref="purchase_request_type.view_purchase_request_type_tree"
        />
        <field name="arch" type="xml">
            <field name="reduce_step" position="after">
                <field
                    name="procurement_type_ids"
                    optional="show"
                    widget="many2many_tags"
                />
            </field>
        </field>
    </record>
    <record id="view_purchase_request_type_form" model="ir.ui.view">
        <field name="model">purchase.request.type</field>
        <field
            name="inherit_id"
            ref="purchase_request_type.view_purchase_request_type_form"
        />
        <field name="arch" type="xml">
            <field name="picking_type_id" position="after">
                <field
                    name="procurement_type_ids"
                    optional="show"
                    widget="many2many_tags"
                />
            </field>
        </field>
    </record>
</odoo>
