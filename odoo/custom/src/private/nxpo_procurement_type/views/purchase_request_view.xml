<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_purchase_request_form" model="ir.ui.view">
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form" />
        <field name="arch" type="xml">
            <field name="requested_by" position="before">
                <field name="procurement_type_ids" invisible="1" />
                <field
                    name="procurement_type_id"
                    required="True"
                    domain="[('id', 'in', procurement_type_ids)]"
                    attrs="{'readonly': [('is_editable','=', False)]}"
                />
            </field>
        </field>
    </record>
    <record id="view_purchase_request_tree" model="ir.ui.view">
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_tree" />
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="procurement_type_id" optional="show" />
            </field>
        </field>
    </record>
    <record id="view_purchase_request_search" model="ir.ui.view">
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_search" />
        <field name="arch" type="xml">
            <field name="requested_by" position="before">
                <field name="procurement_type_id" />
            </field>
            <group position="inside">
                <filter
                    string="Procurement Type"
                    name="procurement_type_id"
                    domain="[]"
                    context="{'group_by': 'procurement_type_id'}"
                />
            </group>
        </field>
    </record>
</odoo>
