<odoo>

    <record id="view_budget_transfer_form" model="ir.ui.view">
        <field name="name">view.budget.transfer.form</field>
        <field name="model">budget.transfer</field>
        <field
            name="inherit_id"
            ref="budget_control_transfer.view_budget_transfer_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='transfer_item_ids']/tree/field[@name='target_budget_control_id']"
                position="after"
            >
                <field
                    name="target_program_id"
                    domain="[('id', 'in', target_program_all)]"
                />
                <field
                    name="target_program_all"
                    widget="many2many_tags"
                    optional="hide"
                />
            </xpath>
            <xpath
                expr="//field[@name='transfer_item_ids']/tree/field[@name='source_budget_control_id']"
                position="after"
            >
                <field
                    name="source_program_id"
                    domain="[('id', 'in', source_program_all)]"
                />
                <field
                    name="source_program_all"
                    widget="many2many_tags"
                    optional="hide"
                />
            </xpath>
        </field>
    </record>

</odoo>
